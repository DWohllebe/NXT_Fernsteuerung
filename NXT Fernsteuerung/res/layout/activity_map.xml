<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    tools:context=".MapActivity" >
    
      <de.amr.plt.rcTestapp.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/imageButton_SensorInfoToggle"  />
      
      <ImageButton
    	    android:id="@+id/imageButton_SensorInfoToggle"
    	    android:layout_width="wrap_content"
    	    android:layout_height="140dp"
    	    android:layout_alignParentRight="true"
    	    android:layout_centerVertical="true"
    	    android:onClick="onToggleSensorInfoClicked"
    	    android:src="@drawable/ic_launcher_nxt" />

    	<ImageButton
    	    android:id="@+id/imageButton_ChangeMode"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_above="@+id/imageButton_SensorInfoToggle"
    	    android:layout_alignLeft="@+id/imageButton_SensorInfoToggle"
    	    android:layout_alignParentRight="true"
    	    android:layout_alignParentTop="true"
    	    android:onClick="onChangeModeClicked"
    	    android:src="@drawable/bt_disconnect" />

    	<ImageButton
    	    android:id="@+id/imageButton_BluetoothConnect"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignLeft="@+id/imageButton_SensorInfoToggle"
    	    android:layout_alignParentBottom="true"
    	    android:layout_alignParentRight="true"
    	    android:layout_below="@+id/imageButton_SensorInfoToggle"
    	    android:src="@drawable/bt_bluetooth_off" /> 
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/imageButton_SensorInfoToggle" >
       
    	<TextView
    	    android:id="@+id/text"
    	    android:text="@string/map_view_text"
    	    android:visibility="visible"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_centerInParent="true"
    	    android:gravity="center_horizontal"
    	    android:textColor="#88ffffff"
    	    android:textSize="24sp" />

    	<EditText
    	    android:id="@+id/editText_PosX"
    	    android:layout_width="80dp"
    	    android:layout_height="wrap_content"
    	    android:layout_alignParentBottom="true"
    	    android:layout_toLeftOf="@+id/editText_PosY"
    	    android:ems="10"
    	    android:hint="@string/map_editText_PosX_Hint"
    	    android:inputType="numberDecimal"
    	    android:text="@string/map_editText_PosX"
    	    android:textColor="@android:color/white" />
    	
    	<EditText
    	    android:id="@+id/editText_PosY"
    	    android:layout_width="80dp"
    	    android:layout_height="wrap_content"
    	    android:layout_alignParentBottom="true"
    	    android:layout_toLeftOf="@+id/progressBar1"
    	    android:ems="10"
    	    android:inputType="numberDecimal"
    	    android:text="@string/map_editText_PosY"
    	    android:textColor="@android:color/white"
    	    android:hint="@string/map_editText_PosY_Hint" />
    	
    	<Button
    	    android:id="@+id/Button_followVirtualPos"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignParentBottom="true"
    	    android:layout_toLeftOf="@+id/editText_PosX"
    	    android:text="@string/map_Button_followVirtualPos"
    	    android:onClick="onFollowVirtualPosClicked" />

    	<Button
    	    android:id="@+id/Button_updateVirtualPos"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_above="@+id/editText_PosY"
    	    android:layout_alignRight="@+id/editText_PosY"
    	    android:onClick="onUpdateVirtualPosClicked"
    	    android:text="@string/map_Button_updateVirtualPos"
    	    android:visibility="invisible" />

    	<TextView
    	    android:id="@+id/textView_State"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignParentBottom="true"
    	    android:layout_alignParentLeft="true"
    	    android:text="@string/map_textView_State"
    	    android:textAppearance="?android:attr/textAppearanceLarge"
    	    android:textColor="@android:color/holo_blue_bright" />

    	<TextView
    	    android:id="@+id/textView_Info"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignParentBottom="true"
    	    android:layout_toRightOf="@+id/textView_State"
    	    android:paddingLeft="20dp"
    	    android:text="@string/map_textView_Info"
    	    android:textAppearance="?android:attr/textAppearanceLarge"
    	    android:textColor="@android:color/white" />

    	<Spinner
    	    android:id="@+id/modeSpinner"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignParentRight="true"
    	    android:layout_alignParentTop="true" />

    	<Button
    	    android:id="@+id/buttonBluetoothConnect"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_above="@+id/Button_updateVirtualPos"
    	    android:layout_alignParentLeft="true"
    	    android:text="Test" />


    	<ProgressBar
    	    android:id="@+id/progressBar1"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignParentBottom="true"
    	    android:layout_alignParentRight="true" />

    	<TextView
    	    android:id="@+id/textView_XValue_Label"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignParentLeft="true"
    	    android:layout_alignParentTop="true"
    	    android:text="@string/map_textView_XValue_Label"
    	    android:textAppearance="?android:attr/textAppearanceSmall"
    	    android:textColor="@android:color/white" />

    	<TextView
    	    android:id="@+id/textView_YValue_Label"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignParentLeft="true"
    	    android:layout_below="@+id/textView_XValue_Label"
    	    android:text="@string/map_textView_YValue_Label"
    	    android:textAppearance="?android:attr/textAppearanceSmall"
    	    android:textColor="@android:color/white" />

    	<TextView
    	    android:id="@+id/textView_AngleValue_Label"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignParentLeft="true"
    	    android:layout_below="@+id/textView_YValue_Label"
    	    android:text="@string/map_textView_AngleValue_Label"
    	    android:textAppearance="?android:attr/textAppearanceSmall"
    	    android:textColor="@android:color/white" />

    	<TextView
    	    android:id="@+id/textView_XValue"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignBaseline="@+id/textView_XValue_Label"
    	    android:layout_toRightOf="@+id/textView_XValue_Label"
    	    android:text="@string/map_textView_XValue"
    	    android:textAppearance="?android:attr/textAppearanceSmall"
    	    android:textColor="@android:color/white" />

    	<TextView
    	    android:id="@+id/textView_YValue"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignBaseline="@+id/textView_YValue_Label"
    	    android:layout_toRightOf="@+id/textView_YValue_Label"
    	    android:text="@string/map_textView_YValue"
    	    android:textAppearance="?android:attr/textAppearanceSmall"
    	    android:textColor="@android:color/white" />

    	<TextView
    	    android:id="@+id/textView_AngleValue"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignBaseline="@+id/textView_AngleValue_Label"
    	    android:layout_toRightOf="@+id/textView_AngleValue_Label"
    	    android:text="@string/map_textView_AngleValue"
    	    android:textAppearance="?android:attr/textAppearanceSmall"
    	    android:textColor="@android:color/black" />

    	
         
    </RelativeLayout>   
        
</RelativeLayout>



   
    
    


